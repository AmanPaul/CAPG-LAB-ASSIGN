package labFour;
import java.lang.Object.*;
abstract class Item
{
private int ID;
private String title;
private int noc;
Item()
{
ID=0;
title="not set";
noc=0;
}
void setID(int id)
{
ID=id;
}
void setNoc(int n)
{
noc=n;
}
void setTitle(String str)
{
title=str;
}
int getID()
{
return ID;
}
String getTitle()
{
return title;
}
int getNoc()
{
return noc;
}
void checkIn()
{
noc=noc+1;
}
void checkOut()
{
noc=noc-1;
}
void addItem(int id,String str,int n)
{
setID(id);
setTitle(str);
setNoc(n);
}
}
abstract class WrittenItem extends Item
{
private String author;
void setAuthor(String str)
{
author=str;
}
String getAuthor()
{
return author;
}
int getID()
{
return super.getID();
}
String getTitle()
{
return super.getTitle();
}
int getNoc()
{
return super.getNoc();
}
public void toString();
}
class Book extends WrittenItem
{
public void toString()
{
return "ID: "+super.getID()+"\nTITLE:"+super.getTitle()+"\nAUTHOR:"+super.getAuthor()+"\nNUMBER OF COPIES: "+super.getNoc();
}
}
class JournalPaper extends WrittenItem
{
private int pubyear;
JournalPaper()
{
pubyear=0000;
}
void setYear(int year)
{
pubyear=year;
}
int getYear()
{
return pubyear;
}

}
abstract class MediaItem
{
private int runtime;
}
class Video extends MediaItem
{
private String director;
private String genre;
private int year;

}
class CD extends MediaItem
{
private String artist;
private String genre;
}
